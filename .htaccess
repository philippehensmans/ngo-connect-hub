# Bloquer l'accès au répertoire .git
RedirectMatch 404 /\.git

# Bloquer l'accès aux dossiers sensibles
RedirectMatch 404 ^/(src|views|data|vendor|tests)

# Bloquer l'accès aux fichiers de configuration
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.json">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.lock">
    Order allow,deny
    Deny from all
</Files>

<Files ".env">
    Order allow,deny
    Deny from all
</Files>
